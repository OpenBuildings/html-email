# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
# Tab indentation by default (no size specified)
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.php]
indent_style = tab

# Matches the exact file `.travis.yml`
[.{travis,scrutinizer}.{yml,yaml}]
indent_style = space
indent_size = 2

# Matches the exact file `composer.lock`
[{composer.lock}]
indent_style = space
indent_size = 4
